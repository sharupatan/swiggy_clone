<%= render 'partials/navbar' %>

<h1 class='text-center mt-3 mb-4'>Food Registration</h1>

<div class='col-3 m-auto'>
<%= form_with(model: @food, url: foods_path) do |form | %>
  <%= form.label :name %>
	<%= form.text_field :name, class: 'form-control mb-3' %>
	<p class='text-danger'><%= @food.errors[:name].join(',') %></p>

	<%= form.label :price %>
	<%= form.text_field :price, class: 'form-control mb-3' %>
	<p class='text-danger'><%= @food.errors[:price].join(',') %></p>

	<%= form.label :status %>
	<%= form.text_field :status, class: 'form-control mb-3' %>
	<p class='text-danger'><%= @food.errors[:status].join(',') %></p>

	<%= form.label :restaurant_id %>
	<%= form.select :restaurant_id, options_for_select(restaurant_names, selected: @food.restaurant_id), class: 'form-control mb-3', prompt: 'Restaurant Name'  %>
	<p class='text-danger'><%= @food.errors[:restaurant_id].join(',') %></p>

	<%= form.submit :Register, class: 'mt-3 btn btn-success' %>
<% end %>
</div>